<h1>Create car workshop</h1>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name">
            </div>
            <div class="form-group mb-3">
                <label for="Description" class="form-label">Description</label>
                <input type="text" class="form-control" id="Description" name="Description">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="PhoneNumber">PhoneNumber</label>
                <input type="text" class="form-control" id="PhoneNumber" name="ContactDetails.PhoneNumber">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="Street">Street</label>
                <input type="text" class="form-control" id="Street" name="ContactDetails.Street">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="City">City</label>
                <input type="text" class="form-control" id="City" name="ContactDetails.City">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="PostalCode">PostalCode</label>
                <input type="text" class="form-control" id="PostalCode" name="ContactDetails.PostalCode">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="About">About</label>
                <input type="text" class="form-control" id="About" name="About">
            </div>

            <div class="form-group mb-3">
                <input type="submit" class="btn btn-primary" value="Create"/>
            </div>
        </form>

    </div>
</div>